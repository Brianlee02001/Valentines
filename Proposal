<body>
    <h1>Will you be my Valentine? üíñ</h1>
    <div class="buttons">
        <button id="yes" onclick="yesClick()">Yes</button>
        <button id="no" onclick="noClick()">No</button>
    </div>

    <script>
        let noButton = document.getElementById("no");
        let yesButton = document.getElementById("yes");
        let clickCount = 0;

        function yesClick() {
            document.body.innerHTML = "<h1>Yay! Can't wait for our date! ‚ù§Ô∏è</h1>";
        }

        function noClick() {
            clickCount++;
            let newX = Math.random() * (window.innerWidth - 100);
            let newY = Math.random() * (window.innerHeight - 100);
            noButton.style.left = `${newX}px`;
            noButton.style.top = `${newY}px`;
            noButton.style.fontSize = `${20 + clickCount * 5}px`;
            noButton.style.padding = `${10 + clickCount * 2}px ${20 + clickCount * 2}px`;
        }
    </script>
